<div class="container">
  <h3>list cocktails :</h3>
  <ul>
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= cocktail.name %>
        <%= link_to "Delete", cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to "Edit", cocktail_path(cocktail) %>
      </li>
    <% end %>

  </ul>


  <%= link_to "Add", new_cocktail_path, class:"btn btn-primary" %>
</div>
